<br>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="text-center" >
            <div class="avatar-container">
                {% if not entity.image %}
                <div class="avatar img-circle img-thumbnail trigger-avatar"></div>
                {% endif %}
                {%set imagen=entity.image|split('images')|last %}
                <img src="{{ asset('/uploads/images' ~ imagen) }}" class="avatar img-circle img-thumbnail {% if not entity.image %}hide{% endif %}" alt="avatar" width="200" height="200" style="height:200px">

                <a href="#" class="btn btn-primary btn-lg btn-circle trigger-avatar">
                    {% if not entity.image %}
                        <i class="fa fa-plus"></i>
                    {% else %}
                        <i class="fa fa-pencil"></i>
                    {% endif %}
                </a>
                <div class="hide">
                    {{ form_widget(form.image) }}
                </div>
            </div>
            <br>
            <br>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="form-group">
            <label class="ct-label" for="">Nombre del torneo</label>
            <div class="input-group">
                {{ form_widget(form.name) }}
                <div class="input-group-addon ct-addon-especial">
                    <i style="font-size:20px;border-bottom: 1px solid #505050" class="fa fa-pencil"></i>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label class="ct-label" for="">Fecha de Inicio:</label>
            <div class="form-group">
                <div class="input-group date">
                    <div class="input-group-addon bg-solid-black ct-addon-left ct-input-group-addon text-white">Fecha de Inicio:</div>
                    <div class="input-group-addon ct-addon-left ct-input-bg">
                        <i style="font-size:20px;border-bottom: 1px solid #505050" class="fa fa-pencil"></i>
                    </div>
                    {{ form_widget(form.fechaInicio) }}
                    <div class="input-group-addon bg-danger">
                        <img style="width: 30px; height: 30px;" src="{{ asset('bundles/app/images/gallery/icons/fecha.svg') }}" alt="">
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="ct-label" for="">Fecha final:</label>
            <div class="form-group">
                <div class="input-group date">
                    <div class="input-group-addon bg-solid-black ct-addon-left ct-input-group-addon text-white">Fecha final:</div>
                    <div class="input-group-addon ct-addon-left ct-input-bg">
                        <i style="font-size:20px;border-bottom: 1px solid #505050" class="fa fa-pencil"></i>
                    </div>
                    {{ form_widget(form.fechaFinal) }}
                    <div class="input-group-addon bg-danger">
                        <img style="width: 30px; height: 30px;" src="{{ asset('bundles/app/images/gallery/icons/fecha.svg') }}" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label class="ct-label" for="">Detalle del Torneo</label>
            <div class="form-group">
                <div class="input-group date">
                    <div class="input-group-addon bg-solid-black ct-addon-left ct-input-group-addon text-white">Detalle del Torneo:</div>
                    <div class="input-group-addon ct-addon-left ct-input-bg"><i style="font-size:20px;border-bottom: 1px solid #505050" class="fa fa-pencil"></i></div>
                    {{ form_widget(form.descripcion) }}
                    <div class="input-group-addon bg-danger">
                        <i style="font-size:30px;color:#FFFFFF" class="fa fa-align-justify"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="ct-label" for="">Partidos por día:</label>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon bg-solid-black ct-addon-left ct-input-group-addon text-white">Partidos por día:</div>
                    <div class="input-group-addon ct-addon-left ct-input-bg">
                        <i style="font-size:20px;border-bottom: 1px solid #505050" class="fa fa-pencil"></i>
                    </div>
                    {{ form_widget(form.partidosDia) }}
                    <div class="input-group-addon bg-danger">
                        <img style="width: 30px; height: 30px;" src="{{ asset('bundles/app/images/gallery/icons/partidosDia.svg') }}" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label class="ct-label" for="">Mod./Torneo:</label>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon bg-solid-black ct-addon-left ct-input-group-addon text-white">Mod./Torneo:</div>
                    <div class="input-group-addon ct-addon-left ct-input-bg">
                        <i style="font-size:20px;border-bottom: 1px solid #505050" class="fa fa-pencil"></i>
                    </div>
                    {{ form_widget(form.tournamentType) }}
                    <div class="input-group-addon bg-danger">
                        <img style="width: 30px; height: 30px;" src="{{ asset('bundles/app/images/gallery/icons/modTorneo.svg') }}" alt="">
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="ct-label" for="">Núm. de Equipos:</label>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon bg-solid-black ct-addon-left ct-input-group-addon text-white">Núm. de Equipos:</div>
                    <div class="input-group-addon ct-addon-left ct-input-bg">
                        <i style="font-size:20px;border-bottom: 1px solid #505050" class="fa fa-pencil"></i>
                    </div>
                    {{ form_widget(form.numeroEquipos) }}
                    <div class="input-group-addon bg-danger">
                        <img style="width: 30px; height: 30px;" src="{{ asset('bundles/app/images/gallery/icons/nEquipos.svg') }}" alt="">
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="ct-label" for="">Lugar/Dirección:</label>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon bg-solid-black ct-addon-left ct-input-group-addon text-white">
                        Lugar/Dirección:
                    </div>
                    <div class="input-group-addon ct-addon-left ct-input-bg">
                        <i style="font-size:20px;border-bottom: 1px solid #505050" class="fa fa-pencil"></i>
                    </div>
                    {{ form_widget(form.addresses) }}
                    <div class="input-group-addon bg-danger" data-toggle="modal" data-target="#modal-map" style="cursor:pointer">
                        <img style="width: 30px; height: 30px;" src="{{ asset('bundles/app/images/gallery/icons/lugar.svg') }}" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <br>
    <div class="col-md-4">
        {% if require_add_team %}
        <a href="{{path('app_tournament_step', {id: entity.id, nextstep:2})}}" class="btn bg-gray-trans btn-scuare btn-block text-gray-light btn-step">
            <img class="img-svg-size" src="{{ asset('bundles/app/images/gallery/icons/infoEquipos.svg') }}" alt="">
            Agregar Equipos
        </a>
        {% endif %}
    </div>
    <div class="col-md-4">
        <button type="submit" class="btn bg-gray-trans btn-scuare  btn-rounded  btn-block text-gray-light">
            <img class="img-svg-size" src="{{ asset('bundles/app/images/gallery/icons/creaTorneo.svg') }}" alt="">
            {% if require_add_team %}Actualizar{% else %}Crear{% endif %}
            Torneo
        </button>
    </div>
    <div class="col-md-2">
        <button type="button" data-toggle="modal" data-target="#modal-tournament-modality" class="btn bg-gray btn-scuare btn-block text-gray-light tournament-mode" disabled data-button-action="groups" >
            <img style="width: 50px; height: 50px;" src="{{ asset('bundles/app/images/gallery/icons/grupos.svg') }}" alt="">
            Grupos
        </button>
    </div>
    <div class="col-md-2">
        <button type="button" data-toggle="modal" data-target="#modal-tournament-modality" class="btn bg-gray btn-scuare btn-block text-gray-light tournament-mode" disabled data-button-action="playoff" >
            <img style="width: 50px; height: 50px;" src="{{ asset('bundles/app/images/gallery/icons/playoff.svg') }}" alt="">
            Playoff
        </button>
    </div>
</div>
<div class="row">
    <div class="col-md-4 col-md-offset-8">
        <br>
        <button type="button" data-toggle="modal" data-target="#modal-tournament-modality" class="btn bg-gray btn-scuare btn-block text-gray-light tournament-mode" disabled data-button-action="combined" >
            <img style="width: 40px; height: 40px;" src="{{ asset('bundles/app/images/gallery/icons/combinado.svg') }}" alt="">
            Combinado <small>(Grupos y Playoff)</small>
        </button>
    </div>
</div>
{% include 'AppBundle:Tournament/parts:modaltypetournament.html.twig' %}
{% include 'AppBundle:Tournament/parts:modalmap.html.twig' %}
{{ form_rest(form) }}
