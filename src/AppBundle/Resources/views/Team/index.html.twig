{% extends 'AppBundle::inicio.html.twig' %}

{% block colorMarcoContenido %}<div class="panelGolpp">{% endblock%}
{% block contenidos %}
<div class="row">
    <div class="col-md-12">
        <div class="margenes margen-regular anchoLibre">
            <img id="img-superior" class="img-thumbnail-none" src="{{ asset('bundles/app/images/titleHead/creaTuTorneo.svg') }}" alt="">
            <div class="miContenedor bg-black"><br>
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <nav>
                                <ul class="list-unstyled list-inline pull-right button-actions">
                                    <li>
                                        <a
                                            href="{{path('app_team_new')}}"
                                            class="btn btn-lg btn-transparent"
                                            title="Crear nuevo equipo">
                                            <i class="fa fa-plus" aria-hidden="true"></i>
                                            Nuevo
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 transparent">
                            <div class="list-group">
                                {% for entity in pagination %}
                                <a href="{{path('app_team_edit',{ 'id': entity.id })}}" class="list-group-item">
                                    <div class="row">
                                        <div class="col-md-2 col-xs-12 team-avatar text-center">
                                            {% if not entity.image %}
                                            <div class="avatar img-circle img-thumbnail"></div>
                                            {% else %}
                                            {%set imagen=entity.image|split('images')|last %}
                                            <img src="{{ asset('/uploads/images' ~ imagen) }}" class="avatar img-circle img-thumbnail" alt="{{entity}}" width="40" height="40">
                                            {% endif %}
                                        </div>
                                        <div class="col-md-10 col-xs-12 team-info">
                                            <h4 class="list-group-item-heading">{{entity}}</h4>
                                            <p class="list-group-item-text">
                                                <svg id="shirt" data-color="{{entity.color|default('#FFFFFF')}}" height="105" viewBox="-4 -8 90 90" width="105" xmlns="http://www.w3.org/2000/svg">
                                                    <path class="shirt-color" stroke="#FFFFFF" fill="{{entity.color|default('#FFFFFF')}}" d="M63.8,18.8c-1.1-1.4-9.4-2.5-13.7-5.8c0,0-0.6-0.2-1,0.3C47,16.4,44.9,19,40,19c-4.9,0-7-2.6-9.1-5.7  c-0.3-0.5-1-0.3-1-0.3c-4.3,3.2-12.6,4.4-13.7,5.8c-2.4,3.1-5.8,9.9-8.1,14.3c2.1,3.5,6.9,5.6,10.3,5.9c1.1-1.1,2.8-4.3,3.8-4.3  c0.5,0,1.5,3.4,1.5,10.7c0,5.5-1.8,16.6-1.8,20.1C26.2,67.1,35,67,40,67s13.8,0.1,18.1-1.5c0-3.5-1.8-14.6-1.8-20.1  c0-7.3,1-10.7,1.5-10.7c1,0,2.7,3.2,3.8,4.3c3.3-0.3,8.1-2.5,10.3-5.9C69.6,28.7,66.2,21.9,63.8,18.8z"/>
                                                </svg>
                                            </p>
                                        </div>
                                    </div>
                                </a>
                                {% endfor %}
                            </div>
                            <div class="navigation text-center">
                                {{ knp_pagination_render(pagination) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
{% endblock %}
