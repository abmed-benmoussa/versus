{% extends 'AppBundle::inicio.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{% block colorMarcoContenido %}<div class="panelGolpp">{% endblock%}
{% block contenidos %}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="margenes">
            
            <div class="miContenedor margen-login bg-black">
                <div class="container">
                    <div class="margen-login text-center text-white">
                    <div class="text-center">
                        <h3>Cambio de contrase単a</h3>
                        <br><br>
                    </div>
                    <form action="{{ path("fos_user_change_password") }}" method="post" class="form-horizontal">
                    </div>
                    <div class="input-group">
                        <div class="input-group-addon"><i class="fa fa-key"></i></div>
                        {{ form_widget(form.current_password, { 'attr': {'class': 'form-control', 'placeholder': 'Contrase単a Actual'|trans } }) }}
                    </div>
                    {{ form_errors(form.current_password) }}
                    <br>
                    <div class="input-group">
                        <div class="input-group-addon"><i class="fa fa-key"></i></div>
                        {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'Contrase単a Nueva'|trans } }) }}
                    </div>
                    {{ form_errors(form.plainPassword.first) }}
                    <br>
                    <div class="input-group">
                        <div class="input-group-addon"><i class="fa fa-key"></i></div>
                        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'Repita la Contrase単a'|trans } }) }}
                    </div>
                    {{ form_errors(form.plainPassword.second) }}
                    {{ form_rest(form) }}
                    <br>
                    <br>
                    <input type="submit" class="btn btn-lg btn-danger btn-block" id="_submit" name="_submit" value="Actualizar" />
                    <br>
                </div>
                

                </div>
            </div>
            </form>
            <img id="img-inferior" class="img-thumbnail-none" src="{{ asset('bundles/app/images/gallery/borderInferior.png') }}" alt="">
            <img id="balon" class="balon img-thumbnail-none" src="{{ asset('bundles/app/images/gallery/balon.png') }}" alt="">
        </div>
        
    </div>
</div>

{% endblock %}


