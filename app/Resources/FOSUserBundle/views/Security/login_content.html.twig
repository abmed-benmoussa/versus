{% extends 'AppBundle::layout.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{% block colorMarcoContenido %}<div class="panelGolpp">{% endblock%}
{% block contenidos %}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="margenes">
            <img id="img-superior" class="img-thumbnail-none" src="{{ asset('bundles/app/images/titleHead/iniciarSesion.svg') }}" alt="">
            <div class="miContenedor margen-login bg-black">
                <div class="container">
                {% if error %}
                  <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                    <div class="text-center">
                        <h3>Acceso a la plataforma</h3>
                        <br><br>
                        <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}
                    </div>

                    <div class="input-group">
                        <div class="input-group-addon"><i class="fa fa-user"></i></div>
                        <input class="form-control input-lg" id="username" name="_username" placeholder="Nombre de Usuario" required="required" type="text" value="{{ last_username }}">
                    </div>


                    <br>
                    <div class="input-group">
                        <div class="input-group-addon"><i class="fa fa-key"></i></div>
                        <input class="form-control input-lg" id="password" name="_password" placeholder="Contraseña" required="required" type="password" >
                    </div>


                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    <br>
                    <br>
                    <input type="submit" class="btn btn-danger btn-lg btn-block" id="_submit" name="_submit" value="Ingresar" />

                    <br>
                    <a href="{{path('fos_user_resetting_request')}}" class="text-center"><h4>Olvidó su contraseña</h4></a>
                    <br>
                    <div class="text-center">
                    Conectarse con:
                    <a class="btn btn-social-icon btn-facebook" href="login/facebook">
                      <span class="fa fa-facebook"></span>
                    </a>
                    <a class="btn btn-social-icon btn-google" href="login/google">
                      <span class="fa fa-google"></span>
                    </a>
                    </div>
                </div>
            </div>
            </form>
            <br>
            <img id="img-inferior" class="img-thumbnail-none" src="{{ asset('bundles/app/images/gallery/borderInferior.png') }}" alt="">
            <img id="balon" class="balon img-thumbnail-none" src="{{ asset('bundles/app/images/gallery/balon.png') }}" alt="">
        </div>
        <div class="row">
            <div class="col-md-12">
                <img id="img-superior" class="img-thumbnail-none publicidad1" src="{{ asset('bundles/app/images/publicidad/publicidad1.png') }}" alt="">
            </div>
        </div>
    </div>
</div>

{% endblock %}
